<?xml version="1.0" encoding="UTF-8"?>


<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

<!-- Catalog Rules -->
    <route url="/V1/vnecoms/catalog-free-gift/:productId" method="GET">
        <service class="Vnecoms\FreeGift\Api\FreeGiftRepositoryInterface" method="getProductFGbyProductId"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/vnecoms/add-cart/catalog-free-gift/:quoteId" method="POST">
        <service class="Vnecoms\FreeGift\Api\FreeGiftRepositoryInterface" method="addCartCatalogRules"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

<!-- Catalog Rules -->
    <route url="/V1/vnecoms/sales-free-gift/:quoteId" method="GET">
        <service class="Vnecoms\FreeGift\Api\FreeGiftRepositoryInterface" method="getProductFGbyQuoteId"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/vnecoms/add-cart/sales-free-gift/:quoteId" method="POST">
        <service class="Vnecoms\FreeGift\Api\FreeGiftRepositoryInterface" method="addCartSalesRules"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

</routes>